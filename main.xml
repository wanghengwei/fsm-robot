<?xml version="1.0" encoding="UTF-8" ?>
<testcase>
  <state id="GameServerConnecting">
    <transaction event="connect_failed" target="End"/>
    <transaction event="connect_ok" target="GameServerConnected"/>
    <transaction event="timeout" target="GameServerConnecting" delay="1000"/>
  </state>

  <state id="GameServerConnected">
    <transaction action="sendCEventLogin" target="waitResponseOfCEventLogin"/>
  </state>

  <state id="waitResponseOfCEventLogin">
    <transaction event="timeout" target="Disconnecting"/>
    <transaction event="recvCEventLoginRes">
      <branch cond="ret_is_0" target="Sleeping1"/>
      <branch target="Disconnecting"/>
    </transaction>
  </state>

  <state id="Disconnecting">
    <transaction target="End"/>
  </state>
</testcase>